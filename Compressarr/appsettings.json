{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "Simple",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    },
    "File": {
      "PathFormat": "config/logs/log-{Date}.txt",
      "OutputTemplate": "{Timestamp:o} {RequestId,13} [{Level:u3}] {Properties} {Message} ({EventId:x8}){NewLine}{Exception}",
      "LogLevel": {
        "Default": "Warning"
      }
    }
  }
}